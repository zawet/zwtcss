    .po-r
        pos(relative)
    .po-ab
        pos(absolute)
    .po-fix
        pos(fixed)

    .in-tl
        trbl(0,auto,auto,0)
    .in-tr
        trbl(0,0,auto,auto)
    .in-bl
        trbl(auto,auto,0,0)
    .in-br
        trbl(auto,0,0,auto)
    .out-tl
        trbl(auto,100%,100%,auto)
    .out-tl2
        trbl(auto,auto,100%,0)
    .out-tl3
        trbl(0,100%,auto,auto)
    .out-tr
        trbl(auto,0,100%,auto)
    .out-tr2
        trbl(auto,auto,100%,100%)
    .out-tr3
        trbl(0,auto,auto,100%)
    .out-bl
        trbl(auto,100%,0,auto)
    .out-bl2
        trbl(100%,100%,auto,auto)
    .out-bl3
        trbl(100%,auto,auto,0)
    .out-br
        trbl(auto,auto,0,100%)
    .out-br2
        trbl(100%,0,auto,auto)
    .out-br3
        trbl(100%,auto,auto,100%)
    .in-c
        top: 50%
        left: 50%
        transform: translate(-50%,-50%)
    .in-lc
        /*高度固定，水平居中*/
        left: 50% !important
        transform: translateX(-50%)
         
    .in-vc
        /*宽度固定，垂直居中*/
        top: 50% !important
        transform: translateY(-50%)
    /*层级*/
    zind()