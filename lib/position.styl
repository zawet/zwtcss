
pos(tys)
    position: tys !important;
trbl(t,r,b,l)
    top:t
    right:r
    bottom:b  
    left:l
$zis=(1 9) (2 99) (3 999) (4 9999) (5 99999)
zind(zi=$zis)
    for z in zi
        .z-i{z[0]}
            z-index: z[1] !important;   


